{% extends 'base.html.twig' %}

{% block title %}Modifier la trick{% endblock %}

{% block body %}
    <section class="login">
        <h1>Modifier {{trick.name}}</h1>

        {{ form_start(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.description) }}

            {% if trick.images|length > 0 %}
                <div class="form-group">
                    <label for="trick_images">Images :</label>
                    <div class="row">
                        {% for image in trick.images %}
                            <div class="col-md-4 mb-3">
                                <img src="{{ asset('uploads/' ~ image.path) }}" alt="{{ image.path }}" class="img-fluid">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
                {{ form_row(form.images) }}



            <button id="add-image" type="button" class="btn btn-secondary">Ajout Image</button>

            {{ form_row(form.videos) }}

            <button id="add-video" type="button" class="btn btn-primary">Ajout video</button>


            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>

        {{ form_end(form) }}

    </section>
{% endblock %}

